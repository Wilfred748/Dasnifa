services:
  db:
    image: postgres:16
    container_name: iqcti_db
    environment:
      POSTGRES_DB: iqcti
      POSTGRES_USER: iqcti
      POSTGRES_PASSWORD: iqcti_pass
    ports:
      - "5432:5432"
    volumes:
      - iqcti_pgdata:/var/lib/postgresql/data
    restart: unless-stopped

  pgadmin:
    image: dpage/pgadmin4:8
    container_name: iqcti_pgadmin
    environment:
      PGADMIN_DEFAULT_EMAIL: admin@local
      PGADMIN_DEFAULT_PASSWORD: admin
    ports:
      - "5050:80"
    depends_on:
      - db
    restart: unless-stopped

volumes:
  iqcti_pgdata:
